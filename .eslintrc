{
	"env": {
		"browser": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"ecmaFeatures": {
		"modules": true
	},
	"globals": {
		"sinon": false,
		"expect": false
	},
	"plugins": [
		"angular",
		"mocha"
	],
	"extends": "eslint:recommended",
	"rules": {
		"indent": [2, "tab"],
		"quotes": [2, "single"],
		"linebreak-style": [2, "unix"],
		"semi": [2,	"always"],
		"strict": [2, "global"],
		// mocha
		"mocha/no-exclusive-tests": 2,
		"mocha/handle-done-callback": 2,
		"mocha/no-global-tests": 2,
		// angular
		"angular/angularelement": 1,
		"angular/controller-as": 2,
		"angular/controller-as-route": 2,
		"angular/controller-as-vm": [2, "vm"],
		"angular/controller-name": [2, "/[A-Z].*Controller$/"],
		"angular/definedundefined": 2,
		"angular/di": 2,
		"angular/di-unused": 2,
		"angular/directive-name": [2,"/^ca/"],
		"angular/directive-restrict": 2,
		"angular/document-service": 2,
		"angular/empty-controller": 2,
		"angular/interval-service": 2,
		"angular/json-functions": 2,
		"angular/log": 2,
		"angular/module-getter": 2,
		"angular/module-setter": 2,
		"angular/no-angular-mock": 0,
		"angular/no-cookiestore": 2,
		"angular/no-http-callback": 2,
		"angular/no-inline-template": [0, {"allowSimple": true}],
		"angular/no-jquery-angularelement": 2,
		"angular/no-private-call": 2,
		"angular/no-run-logic": 2,
		"angular/no-services": 2,
		"angular/on-watch": 2,
		"angular/rest-service": [2,"$http"],
		"angular/timeout-service": 2,
		"angular/typecheck-array": 2,
		"angular/typecheck-date": 2,
		"angular/typecheck-function": 2,
		"angular/typecheck-number": 2,
		"angular/typecheck-object": 2,
		"angular/typecheck-regexp": 2,
		"angular/typecheck-string": 2,
		"angular/watchers-execution": [0, "$digest"],
		"angular/window-service": 2
	}
}
